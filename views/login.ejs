<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Acceso - Invitaciones Digitales</title>
    <!-- Enlace a Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Enlace a Font Awesome para iconos -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #e9eff5;
            /* Un fondo azul muy claro */
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            color: #333;
        }

        .login-container {
            background-color: #ffffff;
            border-radius: 15px;
            padding: 40px;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
            max-width: 450px;
            width: 90%;
            text-align: center;
        }

        .logo-placeholder {
            margin-bottom: 30px;
        }

        .logo-placeholder img {
            max-width: 120px;
            border-radius: 15px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.08);
        }

        h1 {
            font-size: 2.2rem;
            color: #34495e;
            /* Azul oscuro */
            margin-bottom: 25px;
            font-weight: bold;
        }

        .form-control {
            border-radius: 8px;
            padding: 12px;
            border: 1px solid #ced4da;
        }

        .btn-login {
            background-color: #6f42c1;
            /* Púrpura */
            border-color: #6f42c1;
            color: white;
            padding: 12px 25px;
            font-size: 1.1rem;
            border-radius: 8px;
            width: 100%;
            transition: all 0.3s ease;
        }

        .btn-login:hover {
            background-color: #5a36a0;
            border-color: #5a36a0;
            transform: translateY(-2px);
        }

        .forgot-password {
            margin-top: 15px;
            font-size: 0.95rem;
        }

        .forgot-password a {
            color: #3498db;
            /* Azul */
            text-decoration: none;
        }

        .forgot-password a:hover {
            text-decoration: underline;
        }

        .alert-message {
            margin-top: 20px;
            border-radius: 8px;
            padding: 12px;
            font-size: 0.95rem;
        }
    </style>
</head>

<body>
    <div class="login-container">
        <div class="logo-placeholder">
            <img src="https://placehold.co/120x120/6f42c1/ffffff?text=App" alt="Logo de la Aplicación">
        </div>
        <h1>Acceso al Sistema</h1>

        <form>
            <div class="mb-3 text-start">
                <label for="emailInput" class="form-label">Correo Electrónico</label>
                <input type="email" class="form-control" id="emailInput" placeholder="tu@ejemplo.com" required>
            </div>
            <div class="mb-4 text-start">
                <label for="passwordInput" class="form-label">Contraseña</label>
                <input type="password" class="form-control" id="passwordInput" placeholder="********" required>
            </div>
            <button type="submit" class="btn btn-login">Iniciar Sesión</button>
        </form>

        <div class="forgot-password">
            <a href="#">¿Olvidaste tu contraseña?</a>
        </div>

        <!-- Mensaje de error/éxito (oculto por defecto) -->
        <div id="loginMessage" class="alert-message alert-danger d-none" role="alert">
            <!-- Mensaje de error: "Credenciales incorrectas. Inténtalo de nuevo." -->
        </div>
    </div>

    <!-- Bootstrap Bundle con Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Simulación de un mensaje de login
        document.querySelector('form').addEventListener('submit', function (event) {
            event.preventDefault(); // Evita el envío del formulario
            const loginMessage = document.getElementById('loginMessage');

            // Simula un login exitoso o fallido
            const isSuccess = Math.random() > 0.5; // 50% de probabilidad de éxito

            loginMessage.classList.remove('d-none', 'alert-success', 'alert-danger');
            if (isSuccess) {
                loginMessage.classList.add('alert-success');
                loginMessage.textContent = '¡Inicio de sesión exitoso! Redirigiendo...';
                // En una app real, aquí se redirigiría al dashboard correspondiente
            } else {
                loginMessage.classList.add('alert-danger');
                loginMessage.textContent = 'Credenciales incorrectas. Inténtalo de nuevo.';
            }

            setTimeout(() => {
                loginMessage.classList.add('d-none');
            }, 3000); // Ocultar mensaje después de 3 segundos
        });
    </script>
</body>

</html>